/**** dt:display type  ****/
[dt = 'tips']{
	font: 12pt;
	color: grey;
	background-color: transparent;
}
[dt = 'mtc']{
	font: 24pt "方正北魏楷书简体";
	color: black;
	background-color: transparent;
}
[dt = 'title']{
	font: 18pt;
	color: black;
	background-color: transparent;
}
/**** ft:font type ****/
[ft = 'chinese1']{
    font: "包图小白体";
}
[ft = 'chinese2']{
    font: "方正北魏楷书简体";
}
/**** fs:font size ****/
[fs = 'lager']{
	font: 24pt;
}
[fs = 'lage']{
	font: 20pt;
}
[fs = 'normal']{
	font: 16pt;
}
[fs = 'small']{
	font: 12pt;
}
[fs = 'smaller']{
	font: 9pt;
}

/**** bci:background color ****/
[bc = 'white']{
    color: black;
	background: rgb(255, 255, 255);
}
[bc = 'transparent']{
    color: black;
	background-color: transparent;
}
[bc = 'red']{
	color: #ffffff;
    background-color: rgb(218, 121, 123);
}
[bc = 'grey']{
	color: #000000;
	background-color: rgb(209, 209, 209);
}
[bc = 'green']{
    color: #ffffff;
	background-color: #b0c257;
}
[bc = 'green2']{
    color: #ffffff;
	background-color: #1abc9c;
}
[bc = 'Turquoise']{
	color: black;
	background-color: rgb(117, 190, 207);
}
[bc = 'blue']{
	color: #414141;
	background-color: rgb(69, 112, 186);
}
[bc = 'purple']{
	color: #bebebe;
	background-color: #5d4b86;
}
[bc = 'orange']{
	color: #969690;
	background-color: #e6e69b;
}
/**** border ****/
[border = '3sp']{
	border: 3px solid black;
}
[border = 'none']{
	background:transparent;
	border-width:0;
	border-style:outset;
}
[border = 'r']{
	border-radius: 50%;
}
